[Unit]
Description=Radarr Daemon
After=syslog.target network.target

[Service]
User={{ Radarr_user_name }}
Group={{ Radarr_group_name }}
Type=simple
ExecStart={{ Radarr_user_home }}/bin/Radarr/Radarr -nobrowser -data={{ Radarr_data_path }}
TimeoutStopSec=20
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target
